{
  "name": "linear-app-create-issue-action",
  "version": "1.2.0",
  "private": true,
  "description": "GitHub Action to create an Issue for Linear.app.",
  "main": "lib/main.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "lint": "eslint src/**/*.ts",
    "build-package": "npm-run-all -l -s build package",
    "package": "ncc build --source-map --license licenses.txt",
    "test": "jest",
    "test:ci": "jest --ci --runInBand --coverage",
    "check": "npm-run-all -s build -p test:ci lint",
    "release": "shipjs prepare",
    "test-lint": "npm-run-all -l -p test:ci lint",
    "prerelease": "npm-run-all -l -p build-package test-lint"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/korosuke613/linear-app-create-issue-action.git"
  },
  "keywords": [
    "actions",
    "node",
    "linear-app"
  ],
  "author": "Futa Hirakoba",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.2.7",
    "@linear/sdk": "^13.0.0",
    "yaml-front-matter": "^4.1.1"
  },
  "devDependencies": {
    "@cybozu/eslint-config": "^22.0.2",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.11.6",
    "@types/yaml-front-matter": "^4.1.0",
    "@typescript-eslint/parser": "^6.19.1",
    "@vercel/ncc": "^0.38.1",
    "eslint": "^8.0.1",
    "eslint-plugin-github": "^4.10.1",
    "eslint-plugin-jest": "^27.6.3",
    "jest": "^29.7.0",
    "jest-circus": "^29.7.0",
    "jest-junit": "^16.0.0",
    "js-yaml": "^4.1.0",
    "nock": "^13.5.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.2.4",
    "shipjs": "^0.0.8",
    "ts-jest": "^29.1.2",
    "typescript": "^5.3.3"
  },
  "volta": {
    "node": "20.11.0"
  }
}
